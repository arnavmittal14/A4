#include <Arduino.h>

// Pin 9 has an LED connected on most Arduino boards.
const uint8_t ledPin_left = A0;  // LED connected to Analog pin A0
const uint8_t ledPin_right = A1; // LED connected to Analog pin A1

void setup() {
  // nothing happens in setup
  pinMode(ledPin_left, OUTPUT);
  pinMode(ledPin_right, OUTPUT);
}

void loop() {

  /*

  for(int i = 0; i < 21; i++){

    if(i < 5){
      analogWrite(ledPin_left, 100);
    } else {
      analogWrite(ledPin_left, 0);
    }
  }

  */

  // fade in from min to max in increments of 5 points:
  for (int brightness = 0; brightness <= 255; brightness += 5) {
    analogWrite(ledPin_left, brightness);
    analogWrite(ledPin_right, brightness);
    //delay(1);
  }

  // fade out from max to min in increments of 5 points:
  for (int brightness = 255; brightness >= 0; brightness -= 5) {
    analogWrite(ledPin_left, brightness);
    analogWrite(ledPin_right, brightness);
    //delay(1);
  }

}
