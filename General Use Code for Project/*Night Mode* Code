const int LDRPin = A0; // Pin where LDR is connected
const int LEDPin = 13; // Pin where LED is connected
const int threshold = 500; // Adjust this value according to your lighting conditions

void setup() {
  pinMode(LEDPin, OUTPUT); // Set LED pin as output
  Serial.begin(9600); // Initialize serial communication
}

void loop() {
  int LDRValue = analogRead(LDRPin); // Read the value from the LDR
  Serial.println(LDRValue); // Print the LDR value for debugging

  if (LDRValue < threshold) {
    // It's dark
    digitalWrite(LEDPin, HIGH); // Turn on the LED
  } else {
    // It's bright
    digitalWrite(LEDPin, LOW); // Turn off the LED
  }
  
  delay(100); // Small delay to avoid overwhelming the serial output
}
